<hibernate-mapping>
    <class name="ru.eulanov.models.Announcement" table="announcements">
        <id name="id">
            <generator class="identity"/>
        </id>
        <property name="description"/>
        <property name="contactInfo"/>
        <property name="createdDate"/>
        <property name="price"/>
        <bag name="photos" table="photos" inverse="true" cascade="all">
            <key column="announcement_id" not-null="true" on-delete="cascade"/>
            <one-to-many class="ru.eulanov.models.Photo"/>
        </bag>
        <one-to-one name="car" class="ru.eulanov.models.Car" cascade="all-delete-orphan"/>
        <many-to-one name="seller"
                     column="user_id"
                     not-null="true"
                     cascade="all"
                     class="ru.eulanov.models.User"/>
    </class>
</hibernate-mapping>