<hibernate-mapping>
    <class name="ru.eulanov.models.Car" table="cars">
        <id name="id">
            <generator class="identity"/>
        </id>
        <property name="vin" unique="true"/>
        <property name="brand"/>
        <property name="model"/>
        <property name="year"/>
        <property name="run"/>
        <property name="type"/>
        <property name="color"/>
        <property name="enginePower"/>
        <property name="engineVolume"/>
        <property name="engineType"/>
        <many-to-one name="announcement"
                     column="announcement_id" on-delete="cascade"
                     unique="true"
                     not-null="true"/>
    </class>
</hibernate-mapping>